<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hikeCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/hikeNameItem"
            android:text="Title"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/hikeLengthItem"
            android:text="length"
            android:layout_toEndOf="@id/hikeNameItem"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/hikeLevelItem"
            android:text="level"
            android:layout_toEndOf="@id/hikeLengthItem"
            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/hikeDescItem"
            android:text="desc"
            android:textColor="@color/lavender"
            android:textSize="14sp"
            android:layout_below="@id/hikeNameItem"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>